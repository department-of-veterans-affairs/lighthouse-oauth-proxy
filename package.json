{
  "name": "oauth-proxy",
  "version": "1.0.0",
  "description": "Proxies requests to Okta to conform to FHIR API standard",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci",
    "prestart": "npx eslint .",
    "start": "node src/index.js --config dev-config.json",
    "lint": "npx eslint .",
    "lint-fix": "npx eslint . --fix",
    "help": "node src/index.js --help",
    "prepare": "husky install && src/scripts/check_for_git_secrets.sh"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/department-of-veterans-affairs/lighthouse-oauth-proxy.git"
  },
  "author": "Department of Veterans Affairs",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/department-of-veterans-affairs/lighthouse-oauth-proxy/issues"
  },
  "homepage": "https://github.com/department-of-veterans-affairs/lighthouse-oauth-proxy#readme",
  "dependencies": {
    "@okta/okta-sdk-nodejs": "^4.4.0",
    "@sentry/node": "^6.2.3",
    "aws-sdk": "^2.859.0",
    "axios": "^0.21.2",
    "body-parser": "^1.19.0",
    "cls-rtracer": "^2.6.0",
    "cors": "^2.8.5",
    "date-fns": "^2.22.1",
    "express": "^4.17.1",
    "express-prom-bundle": "^6.3.4",
    "express-session": "^1.17.1",
    "jwt-decode": "^2.2.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "openid-client": "^4.4.2",
    "process": "^0.11.10",
    "prom-client": "^13.1.0",
    "uuid": "^8.3.2",
    "validator": "^13.5.2",
    "winston": "^3.3.3",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.19.0",
    "babel-eslint": "^10.1.0",
    "crypto": "^1.0.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.9",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.3.0",
    "njwt": "^1.0.0",
    "prettier": "2.2.1",
    "timekeeper": "^2.2.0"
  }
}
